<h1>{{ article.title }}</h1>
{% if section.settings.enable_author %}

  <small>{{ article.author }}</small>
{% else %}
  <small>Anonymous Author</small>
{% endif %}
{% if section.settings.enable_publish_date %}

  <time datetime="{{article.published_at |  date: "%Y-%m-%d"}}">{{ article.published_at | date: "%Y-%m-%d" }}</time>
{% else %}
  <small>Unknown Time & Date</small>
{% endif %}
<img
  src="{{article.image |  img_url: "large" }}"
  width="100"
  height="100"
  loading="lazy"
  alt="{{article.image.alt}}">
<div class="">{{ article.content }}</div>

{% schema %}
  {
    "name": "template article",
    "tag": "section",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name"
      }, {
        "type": "checkbox",
        "id": "enable_publish_date",
        "default": true,
        "label": "Display Published Date"
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
      },
      {
        "type": "featured_image",
        "name": "Featured Image",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}