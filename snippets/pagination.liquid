{% if pagination.pages > 1 %}
  <nav role="navigation" class="flex !gap-x-3 justify-center my-6 space-x-2 text-sm">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}" class="px-3 py-1 rounded border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
        &laquo; {{ pagination.previous.title }}
      </a>
    {% endif %}

    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}" class="px-3 py-1 rounded border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          {{ part.title }}
        </a>
      {% else %}
        <span class="px-3 py-1 rounded border !border-blue-500 !bg-green-500 text-black font-semibold cursor-default">
          {{ part.title }}
        </span>
      {% endif %}
    {% endfor %}

    {% if pagination.next %}
      <a href="{{ pagination.next.url }}" class="px-3 py-1 rounded border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
        {{ pagination.next.title }} &raquo;
      </a>
    {% endif %}
  </nav>
{% endif %}